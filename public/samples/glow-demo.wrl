#VRML V2.0 utf8
# Emissive Color Demonstration

# No glow (left)
Transform {
  translation -3 1 0
  children [
    Shape {
      geometry Sphere { radius 0.6 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0 0
        }
      }
    }
  ]
}

# Subtle glow (center-left)
Transform {
  translation -1 1 0
  children [
    Shape {
      geometry Sphere { radius 0.6 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0.3 0
          emissiveColor 0.3 0.1 0
        }
      }
    }
  ]
}

# Medium glow (center-right)
Transform {
  translation 1 1 0
  children [
    Shape {
      geometry Sphere { radius 0.6 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0.6 0
          emissiveColor 0.6 0.3 0
        }
      }
    }
  ]
}

# Maximum glow (right)
Transform {
  translation 3 1 0
  children [
    Shape {
      geometry Sphere { radius 0.6 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0.8 0
          emissiveColor 1 0.6 0
        }
      }
    }
  ]
}

# Ground
Transform {
  translation 0 -0.2 0
  children [
    Shape {
      geometry Box { size 10 0.4 6 }
      appearance Appearance {
        material Material {
          diffuseColor 0.1 0.1 0.12
        }
      }
    }
  ]
}
```

