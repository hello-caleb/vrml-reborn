#VRML V2.0 utf8
# Transparency Demonstration

# Solid red (back)
Transform {
  translation 0 0 -1
  children [
    Shape {
      geometry Sphere { radius 0.8 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0.2 0.2
        }
      }
    }
  ]
}

# 25% transparent orange
Transform {
  translation -0.6 0 -0.5
  children [
    Shape {
      geometry Sphere { radius 0.8 }
      appearance Appearance {
        material Material {
          diffuseColor 1 0.6 0.1
          transparency 0.25
        }
      }
    }
  ]
}

# 50% transparent yellow
Transform {
  translation 0.6 0 -0.5
  children [
    Shape {
      geometry Sphere { radius 0.8 }
      appearance Appearance {
        material Material {
          diffuseColor 1 1 0.2
          transparency 0.5
        }
      }
    }
  ]
}

