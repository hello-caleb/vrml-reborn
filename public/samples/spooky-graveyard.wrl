#VRML V2.0 utf8

# Glowing jack-o-lantern
Transform {
  translation -2 0.5 0
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 1 0.6 0.1
          emissiveColor 0.8 0.4 0
        }
      }
      geometry Sphere { radius 0.5 }
    }
  ]
}

# Glowing moon
Transform {
  translation 0 3 -5
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 1 1 0.9
          emissiveColor 0.9 0.9 0.7
        }
      }
      geometry Sphere { radius 0.8 }
    }
  ]
}

# Semi-transparent ghost
Transform {
  translation 2 1 0
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0.9 0.9 1
          transparency 0.6
        }
      }
      geometry Sphere { radius 0.6 }
    }
  ]
}

# Very transparent fog patch
Transform {
  translation 0 0.3 1
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0.7 0.7 0.8
          transparency 0.85
        }
      }
      geometry Box { size 3 1 2 }
    }
  ]
}
